.login-div{
  min-height: 10px;
  display: inline-block;
  vertical-align: middle;
  text-align: left;
  white-space: normal;
  padding: 40px 0;
  width:300px;
  .login-action{
    text-align: center;
    margin: 20px auto 25px;
    ul{
      list-style-type: none;
      li{
        span{
          padding: 4.5px;
          border-bottom: 1px solid #5d5d5d;
          color: #5d5d5d;
          opacity: 1;
        }
      }
    }
  }
  .login-msg h2{
    margin: 30px 0;
    font-weight: 400;
    font-size: 18px;
    line-height: 1;
    text-align:center;
  }
}

#login:before {
  content: '';
  display: inline-block;
  height: 100%;
  vertical-align: middle;
  margin-left: -0.25em;
}